<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
	backupStaticAttributes="false"
	colors="true"
	convertErrorsToExceptions="true"
	convertNoticesToExceptions="true"
	convertWarningsToExceptions="true"
	processIsolation="false"
	stopOnFailure="false"
	syntaxCheck="false"
	bootstrap="./tests/bootstrap.php">

	<testsuites>
		<testsuite name="CacheCache Test Suite">
			<directory suffix=".php">./tests/CacheCache/</directory>
		</testsuite>
	</testsuites>

	<filter>
		<whitelist>
			<directory>./src/CacheCache/</directory>
		</whitelist>
	</filter>
</phpunit>
